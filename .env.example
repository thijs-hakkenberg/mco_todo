# Environment Variables for Git-Based MCP Todo Server
# Copy this file to .env and update with your values

# REQUIRED: Path to your Git repository for storing todos
TODO_REPO_PATH=/Users/yourusername/my-todos

# OPTIONAL: Remote Git repository URL for syncing
TODO_REPO_URL=https://github.com/yourusername/my-todos.git

# REQUIRED: Git user configuration
GIT_USER_NAME=Your Name
GIT_USER_EMAIL=your.email@example.com

# OPTIONAL: Auto-sync configuration
AUTO_SYNC=false
SYNC_INTERVAL_SECONDS=300

# OPTIONAL: API server configuration
PORT=3001
CORS_ORIGIN=http://localhost:5173
NODE_ENV=development
